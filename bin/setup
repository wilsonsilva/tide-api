#!/usr/bin/env bash
set -euo pipefail
IFS=$'\n\t'
set -vx

bundle install

if ! which overcommit >/dev/null; then
  echo 'The gem overcommit is not installed. It is necessary to lint the git history through git hooks.'
  echo 'Please install overcommit and run this script again.'
  exit 1
fi

overcommit --install
